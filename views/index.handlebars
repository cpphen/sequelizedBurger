
<div class = "header">
  <div id = "img"> <img src = "/assets/img/burger.jpg" width = "300" height = "200"> </div>

  <h1 id = "h1">Burger Eater</h1>
</div>

<div class = "lists">
  <div class = "ulOne">
    {{#each theData}}
      {{#unless this.devoured}}
        <div>
          <div class = "bName">
            <div class ="inner">
              {{this.burger_name}}
            </div>
          </div>
          <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button id = "one" type="submit">Devour</button>
          </form>
         
        </div>
      {{/unless}}
    {{/each}}
  </div>


  <ul class = "ulTwo">
    {{#each theData}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
          <form action = "/burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type = "hidden" name = "devoured" value = "false">
            <button type="submit">Puke</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class = "bottom">
  <form class="create-burger" action="/burgers/create" method="POST">
      <textarea type="text" name="burger"></textarea><br><br>
      <button type="submit">Submit</button>
  </form>

  <h2>Enter a burger</h2>
</div>